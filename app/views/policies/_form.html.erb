<%= form_for([@refable, @policy], html: { class: "form-horizontal" }) do |f| %>

    <div class="form-group">
        <%= f.label :contact, "Contact", class: "control-label col-sm-3" %>
        <div class="col-sm-9">
            <%= f.text_area :contact, { rows: 4, class: "form-control" } %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :embargo, "Embargo", class: "control-label col-sm-3" %>
        <div class="col-sm-3">
            <div class="input-group">
                <%= f.text_field :embargo, { size: nil, class: "form-control" } %>
                <span class="input-group-addon">months</span>
            </div>
        </div>
    </div>

    <div class="form-group">
      <%= f.label :print_version, "Print Version of Manuscript",
                  class: "control-label col-sm-3" %>
      <div class="col-sm-6">
        <%= f.select :print_version,
                     options_for_select([['Select A Version', ''],
                                         ['Preprint', 'PREPRINT'],
                                         ['Postprint', 'POSTPRINT'],
                                         ['Finalprint', 'FINALPRINT']],
                                        @policy.print_version),
                     {}, {class: "form-control"}
        %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :method_of_acquisition, "Method of Acquisition",
                  class: "control-label col-sm-3" %>
      <div class="col-sm-6">
        <%= f.select :method_of_acquisition,
                     options_for_select([['Select A Method', ''],
                                         ['Individual download', 'INDIVIDUAL_DOWNLOAD'],
                                         ['Recruit from author', 'RECRUIT_FROM_AUTHOR'],
                                         ['Harvest', 'HARVEST'],
                                         ['Sword', 'SWORD']],
                                        @policy.method_of_acquisition),
                     {}, {class: "form-control"}
        %>
      </div>
    </div>

    <div class="form-group opt_out_required">
        <div class="col-sm-9 col-sm-offset-3">
            <div class="checkbox">
                <%= f.check_box :opt_out_required %>
                <%= f.label :opt_out_required, "Opt Out Required" %>
            </div>
        </div>
    </div>

    <div class="form-group should_request_opt_out">
        <div class="col-sm-9 col-sm-offset-3">
            <div class="checkbox">
                <%= f.check_box :should_request %>
                <%= f.label :should_request, "Should request opt out papers" %>
            </div>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :note, "Note", class: "control-label col-sm-3" %>
        <div class="col-sm-9">
            <%= f.text_area :note, { rows: 4, class: "form-control" } %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :message,
            'Special Message <span class="glyphicon glyphicon-question-sign"></span>'.html_safe,
            class: "control-label col-sm-3 popover-init",
            "data-toggle" => "popover",
            "data-trigger" => "hover",
            "data-placement" => "top",
            "data-content" => "This is the wording that will appear automatically with citations for this publisher."
        %>
        <div class="col-sm-9">
            <%= f.text_area :message, { rows: 4, class: "form-control" } %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-9 col-sm-offset-3">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to "Cancel", polymorphic_path(@refable), class: "btn btn-default" %>
        </div>
    </div>

<% end %>